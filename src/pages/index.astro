				/* Effets de profondeur et ombres */
				--shadow-sm: 0 2px 10px rgba(0, 240, 255, 0.1);
				--shadow-md: 0 10px 30px rgba(0, 240, 255, 0.2);
				--shadow-lg: 0 20px 60px rgba(0, 240, 255, 0.3);
				--shadow-neon: 0 0 20px var(--primary), 0 0 40px var(--primary);
			}

			html {
				scroll-behavior: smooth;
			}

			body {
				font-family: var(--font-secondary);
				background-color: var(--dark);
				color: var(--light);
				line-height: 1.6;
				overflow-x: hidden;
			}

			.container {
				max-width: 1400px;
				margin: 0 auto;
				padding: 0 var(--spacing-md);
			}

			/* ============================================
			   NAVIGATION
			   ============================================ */
			.nav {
				position: fixed;
				top: 0;
				left: 0;
				right: 0;
				z-index: 1000;
				background: rgba(10, 10, 15, 0.95);
				backdrop-filter: blur(10px);
				border-bottom: 1px solid rgba(0, 240, 255, 0.1);
				animation: slideDown 0.5s ease-out;
			}

			@keyframes slideDown {
				from {
					transform: translateY(-100%);
				}
				to {
					transform: translateY(0);
				}
			}

			.nav-container {
				max-width: 1400px;
				margin: 0 auto;
				padding: 1rem 2rem;
				display: flex;
				justify-content: space-between;
				align-items: center;
			}

			.logo {
				display: flex;
				align-items: center;
				gap: 0.5rem;
				font-family: var(--font-primary);
				font-size: 1.5rem;
				font-weight: 900;
				color: var(--primary);
				text-shadow: 0 0 20px var(--primary);
				cursor: pointer;
				transition: transform 0.3s ease;
				text-decoration: none;
			}

			.logo:hover {
				transform: scale(1.05);
			}

			.logo-icon {
				font-size: 2rem;
				animation: float 3s ease-in-out infinite;
			}

			@keyframes float {
				0%,
				100% {
					transform: translateY(0px);
				}
				50% {
					transform: translateY(-10px);
				}
			}

			.nav-links {
				display: flex;
				gap: 2rem;
				list-style: none;
			}

			.nav-links a {
				color: var(--gray);
				text-decoration: none;
				font-weight: 600;
				position: relative;
				transition: color 0.3s ease;
			}

			.nav-links a::after {
				content: '';
				position: absolute;
				bottom: -5px;
				left: 0;
				width: 0;
				height: 2px;
				background: var(--gradient-neon);
				transition: width 0.3s ease;
			}

			.nav-links a:hover {
				color: var(--primary);
			}

			.nav-links a:hover::after {
				width: 100%;
			}

			.mobile-menu-btn {
				display: none;
				flex-direction: column;
				gap: 5px;
				background: none;
				border: none;
				cursor: pointer;
				padding: 5px;
			}

			.mobile-menu-btn span {
				width: 25px;
				height: 3px;
				background: var(--primary);
				border-radius: 2px;
				transition: all 0.3s ease;
			}

			/* ============================================
			   HERO SECTION
			   ============================================ */
			.hero {
				position: relative;
				min-height: 100vh;
				display: flex;
				align-items: center;
				justify-content: center;
				overflow: hidden;
				padding-top: 80px;
				perspective: 2000px;
				transform-style: preserve-3d;
			}

			.hero-bg {
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				z-index: 0;
				overflow: hidden;
			}

			.hero-video {
				position: absolute;
				top: 50%;
				left: 50%;
				min-width: 100%;
				min-height: 100%;
				width: auto;
				height: auto;
				transform: translate(-50%, -50%);
				object-fit: cover;
				opacity: 0.6;
				z-index: 1;
				filter: brightness(0.9) contrast(1.1) saturate(1);
			}

			.video-overlay {
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: linear-gradient(
					135deg,
					rgba(10, 10, 15, 0.4) 0%,
					rgba(26, 26, 46, 0.2) 50%,
					rgba(10, 10, 15, 0.4) 100%
				);
				z-index: 2;
			}

			/* Grille anim√©e en arri√®re-plan avec perspective 3D */
			.animated-grid {
				position: absolute;
				width: 100%;
				height: 100%;
				background-image:
					linear-gradient(rgba(0, 240, 255, 0.1) 1px, transparent 1px),
					linear-gradient(90deg, rgba(0, 240, 255, 0.1) 1px, transparent 1px);
				background-size: 50px 50px;
				animation: gridMove 20s linear infinite;
				transform: perspective(500px) rotateX(60deg);
				transform-origin: center center;
				z-index: 3;
			}

			@keyframes gridMove {
				0% {
					background-position: 0 0;
				}
				100% {
					background-position: 50px 50px;
				}
			}

			/* Particules anim√©es avec effet de profondeur */
			.particles {
				position: absolute;
				width: 100%;
				height: 100%;
				z-index: 4;
			}

			.particles::before,
			.particles::after {
				content: '';
				position: absolute;
				width: 300px;
				height: 300px;
				border-radius: 50%;
				filter: blur(100px);
				opacity: 0.3;
				animation: particleFloat 10s ease-in-out infinite;
			}

			.particles::before {
				background: var(--primary);
				top: 20%;
				left: 10%;
				animation-delay: 0s;
			}

			.particles::after {
				background: var(--secondary);
				bottom: 20%;
				right: 10%;
				animation-delay: 5s;
			}

			@keyframes particleFloat {
				0%,
				100% {
					transform: translate(0, 0) scale(1);
				}
				33% {
					transform: translate(50px, -50px) scale(1.1);
				}
				66% {
					transform: translate(-50px, 50px) scale(0.9);
				}
			}

			.hero-content {
				position: relative;
				z-index: 10;
				text-align: center;
				max-width: 1200px;
				padding: var(--spacing-md);
				transform-style: preserve-3d;
				animation: heroFloat 6s ease-in-out infinite;
			}

			@keyframes heroFloat {
				0%,
				100% {
					transform: translateY(0) rotateX(0deg) rotateY(0deg);
				}
				25% {
					transform: translateY(-10px) rotateX(2deg) rotateY(1deg);
				}
				50% {
					transform: translateY(-5px) rotateX(-1deg) rotateY(-1deg);
				}
				75% {
					transform: translateY(-15px) rotateX(1deg) rotateY(2deg);
				}
			}

			.hero-title-container {
				perspective: 1000px;
				margin-bottom: var(--spacing-md);
			}

			.hero-title {
				font-family: var(--font-primary);
				font-size: clamp(3rem, 10vw, 8rem);
				font-weight: 900;
				margin-bottom: var(--spacing-sm);
				position: relative;
			}

			/* Titre 3D avec animation de rotation subtile */
			.title-3d {
				display: inline-block;
				background: var(--gradient-neon);
				-webkit-background-clip: text;
				background-clip: text;
				-webkit-text-fill-color: transparent;
				animation: title3DAnimation 5s ease-in-out infinite;
				filter: drop-shadow(0 10px 20px rgba(0, 240, 255, 0.5));
			}

			@keyframes title3DAnimation {
				0%,
				100% {
					transform: rotateY(0deg) rotateX(0deg);
				}
				25% {
					transform: rotateY(5deg) rotateX(2deg);
				}
				50% {
					transform: rotateY(0deg) rotateX(-2deg);
				}
				75% {
					transform: rotateY(-5deg) rotateX(2deg);
				}
			}

			.hero-subtitle {
				font-size: 1.5rem;
				font-weight: 700;
				letter-spacing: 0.3rem;
				color: var(--primary);
				text-shadow: var(--shadow-neon);
				animation: pulse 2s ease-in-out infinite;
			}

			@keyframes pulse {
				0%,
				100% {
					opacity: 1;
				}
				50% {
					opacity: 0.7;
				}
			}

			.hero-description {
				font-size: 1.2rem;
				color: var(--gray);
				max-width: 800px;
				margin: var(--spacing-md) auto;
				line-height: 1.8;
			}

			.hero-buttons {
				display: flex;
				gap: var(--spacing-sm);
				justify-content: center;
				flex-wrap: wrap;
				margin: var(--spacing-md) 0;
			}

			/* Boutons avec effets 3D et animations */
			.btn {
				position: relative;
				padding: 1rem 2.5rem;
				font-size: 1.1rem;
				font-weight: 700;
				font-family: var(--font-primary);
				border: none;
				border-radius: 50px;
				cursor: pointer;
				transition: all 0.3s ease;
				overflow: hidden;
				transform-style: preserve-3d;
			}

			.btn span {
				position: relative;
				z-index: 2;
			}

			.btn-primary {
				background: var(--gradient-neon);
				color: var(--dark);
				box-shadow: var(--shadow-lg);
			}

			.btn-primary:hover {
				transform: translateY(-5px) scale(1.05);
				box-shadow: 0 20px 60px rgba(0, 240, 255, 0.5);
			}

			.btn-glow {
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.5), transparent);
				transition: left 0.5s ease;
			}

			.btn-primary:hover .btn-glow {
				left: 100%;
			}

			.btn-secondary {
				background: transparent;
				color: var(--primary);
				border: 2px solid var(--primary);
			}

			.btn-secondary:hover {
				background: var(--primary);
				color: var(--dark);
				transform: translateY(-5px) scale(1.05);
				box-shadow: var(--shadow-md);
			}

			/* Stats avec effet 3D et animation de flottement */
			.hero-stats {
				display: flex;
				gap: var(--spacing-md);
				justify-content: center;
				flex-wrap: wrap;
				margin-top: var(--spacing-lg);
			}

			.stat-card {
				background: rgba(26, 26, 46, 0.8);
				padding: 2rem 3rem;
				border-radius: 20px;
				border: 1px solid rgba(0, 240, 255, 0.2);
				backdrop-filter: blur(10px);
				transform: translateZ(50px);
				transition: all 0.3s ease;
				animation: statFloat 3s ease-in-out infinite;
			}

			.stat-card:nth-child(1) {
				animation-delay: 0s;
			}
			.stat-card:nth-child(2) {
				animation-delay: 0.5s;
			}
			.stat-card:nth-child(3) {
				animation-delay: 1s;
			}

			@keyframes statFloat {
				0%,
				100% {
					transform: translateY(0) translateZ(50px);
				}
				50% {
					transform: translateY(-10px) translateZ(80px);
				}
			}

			.stat-card:hover {
				transform: translateY(-10px) translateZ(100px) scale(1.05);
				border-color: var(--primary);
				box-shadow: var(--shadow-lg);
			}

			.stat-number {
				font-family: var(--font-primary);
				font-size: clamp(1.2rem, 3vw, 1.8rem);
				font-weight: 900;
				background: var(--gradient-neon);
				-webkit-background-clip: text;
				background-clip: text;
				-webkit-text-fill-color: transparent;
				line-height: 1.2;
			}

			.stat-label {
				font-size: 1rem;
				color: var(--gray);
				margin-top: 0.5rem;
				text-transform: uppercase;
				letter-spacing: 0.1rem;
			}

			/* Placeholder pour image hero avec animation */
			.hero-image-placeholder {
				position: absolute;
				bottom: -100px;
				right: 5%;
				width: 200px;
				height: 200px;
				background: rgba(26, 26, 46, 0.6);
				border: 2px dashed rgba(0, 240, 255, 0.3);
				border-radius: 20px;
				display: flex;
				align-items: center;
				justify-content: center;
				backdrop-filter: blur(10px);
				animation: imagePlaceholderPulse 3s ease-in-out infinite;
			}

			@keyframes imagePlaceholderPulse {
				0%,
				100% {
					border-color: rgba(0, 240, 255, 0.3);
					transform: scale(1);
				}
				50% {
					border-color: rgba(0, 240, 255, 0.6);
					transform: scale(1.02);
				}
			}

			.placeholder-content {
				text-align: center;
				color: var(--gray);
			}

			.placeholder-icon {
				font-size: 3rem;
				display: block;
				margin-bottom: 1rem;
			}

			.placeholder-content p {
				font-weight: 600;
				margin-bottom: 0.5rem;
			}

			.placeholder-content small {
				font-size: 0.9rem;
				opacity: 0.7;
			}

			/* ============================================
			   SECTIONS
			   ============================================ */
			.section-title {
				text-align: center;
				font-family: var(--font-primary);
				font-size: clamp(2.5rem, 5vw, 4rem);
				font-weight: 900;
				margin-bottom: var(--spacing-lg);
				position: relative;
			}

			.title-glow {
				display: inline-block;
				background: var(--gradient-neon);
				-webkit-background-clip: text;
				background-clip: text;
				-webkit-text-fill-color: transparent;
				position: relative;
			}

			.title-glow::after {
				content: '';
				position: absolute;
				bottom: -10px;
				left: 50%;
				transform: translateX(-50%);
				width: 100px;
				height: 4px;
				background: var(--gradient-neon);
				border-radius: 2px;
				box-shadow: var(--shadow-neon);
			}

			/* ============================================
		   3D GAMES DIAPORAMA SECTION
		   ============================================ */
			.games-diaporama-section {
				padding: var(--spacing-xl) 0;
				background: linear-gradient(135deg, rgba(0, 240, 255, 0.05), rgba(255, 0, 255, 0.05));
				position: relative;
				overflow: hidden;
			}

			.diaporama-container {
				position: relative;
				max-width: 1200px;
				margin: 0 auto;
				perspective: 2000px;
			}

			.diaporama-track {
				display: flex;
				transition: transform 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
				transform-style: preserve-3d;
			}

			.game-slide {
				flex: 0 0 100%;
				position: relative;
				transform-style: preserve-3d;
				transition: all 0.8s ease;
			}

			.game-slide:not(.active) {
				transform: translateZ(-100px) rotateY(45deg) scale(0.8);
				opacity: 0.6;
			}

			.game-slide.active {
				transform: translateZ(0) rotateY(0deg) scale(1);
				opacity: 1;
			}

			.slide-3d {
				position: relative;
				background: rgba(26, 26, 46, 0.9);
				border-radius: 30px;
				overflow: hidden;
				border: 3px solid rgba(0, 240, 255, 0.3);
				backdrop-filter: blur(20px);
				box-shadow:
					0 30px 60px rgba(0, 240, 255, 0.2),
					0 0 40px rgba(0, 240, 255, 0.1);
				transform-style: preserve-3d;
				animation: slideFloat 6s ease-in-out infinite;
			}

			@keyframes slideFloat {
				0%,
				100% {
					transform: translateY(0) rotateX(0deg) rotateY(0deg);
				}
				25% {
					transform: translateY(-10px) rotateX(2deg) rotateY(1deg);
				}
				50% {
					transform: translateY(-5px) rotateX(-1deg) rotateY(-1deg);
				}
				75% {
					transform: translateY(-15px) rotateX(1deg) rotateY(2deg);
				}
			}

			.slide-image {
				width: 100%;
				height: 400px;
				object-fit: cover;
				transition: all 0.8s ease;
				transform-style: preserve-3d;
			}

			.game-slide:hover .slide-image {
				transform: scale(1.1) rotateY(5deg) rotateX(5deg);
				filter: brightness(1.2) saturate(1.3) contrast(1.1);
			}

			.slide-content {
				position: absolute;
				bottom: 0;
				left: 0;
				right: 0;
				background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
				padding: 2rem;
				transform: translateZ(20px);
			}

			.slide-content h3 {
				font-family: var(--font-primary);
				font-size: 2.5rem;
				color: var(--primary);
				margin-bottom: 0.5rem;
				text-shadow: 0 0 20px rgba(0, 240, 255, 0.5);
				animation: textGlow 3s ease-in-out infinite;
			}

			@keyframes textGlow {
				0%,
				100% {
					text-shadow: 0 0 20px rgba(0, 240, 255, 0.5);
				}
				50% {
					text-shadow: 0 0 30px rgba(0, 240, 255, 0.8);
				}
			}

			.slide-content p {
				font-size: 1.2rem;
				color: var(--light);
				font-weight: 600;
				margin-bottom: 1rem;
			}

			.slide-platforms {
				display: flex;
				gap: 0.5rem;
				justify-content: center;
				flex-wrap: wrap;
			}

			.platform-badge {
				padding: 0.3rem 0.8rem;
				border-radius: 15px;
				font-size: 0.8rem;
				font-weight: 700;
				text-transform: uppercase;
				transition: all 0.4s ease;
				transform-style: preserve-3d;
			}

			.platform-badge.ps5 {
				background: linear-gradient(135deg, #0070cc, #0050cc);
				color: white;
			}

			.platform-badge.ps4 {
				background: linear-gradient(135deg, #003087, #0050cc);
				color: white;
			}

			.platform-badge.pc {
				background: linear-gradient(135deg, #ff6600, #ff9933);
				color: white;
			}

			.game-slide:hover .platform-badge {
				transform: translateY(-3px) rotateY(5deg) scale(1.1);
				box-shadow: 0 5px 15px rgba(0, 240, 255, 0.4);
			}

			.diaporama-controls {
				display: flex;
				justify-content: center;
				align-items: center;
				gap: 2rem;
				margin-top: 2rem;
			}

			.control-btn {
				width: 60px;
				height: 60px;
				border-radius: 50%;
				background: var(--gradient-neon);
				border: none;
				color: var(--dark);
				font-size: 2rem;
				font-weight: 900;
				cursor: pointer;
				transition: all 0.4s ease;
				transform-style: preserve-3d;
				box-shadow: 0 10px 30px rgba(0, 240, 255, 0.3);
			}

			.control-btn:hover {
				transform: translateY(-5px) scale(1.1) rotateY(10deg);
				box-shadow: 0 20px 50px rgba(0, 240, 255, 0.5);
			}

			.dots-container {
				display: flex;
				gap: 1rem;
			}

			.dot {
				width: 15px;
				height: 15px;
				border-radius: 50%;
				background: rgba(0, 240, 255, 0.3);
				cursor: pointer;
				transition: all 0.4s ease;
				transform-style: preserve-3d;
			}

			.dot.active {
				background: var(--primary);
				transform: scale(1.3) translateZ(10px);
				box-shadow: 0 0 20px rgba(0, 240, 255, 0.6);
			}

			.dot:hover {
				transform: scale(1.2) translateZ(5px);
				background: var(--accent);
			}

			/* ============================================
		   √âV√âNEMENTS SECTION
		   ============================================ */
			.events-section {
				padding: var(--spacing-xl) 0;
				position: relative;
			}

			.events-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
				gap: var(--spacing-md);
				margin-top: var(--spacing-lg);
			}

			/* Cartes 3D avec effet de profondeur */
			.event-card {
				position: relative;
				transform-style: preserve-3d;
				transition: all 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
				animation: eventCardFloat 8s ease-in-out infinite;
			}

			.event-card:nth-child(1) {
				animation-delay: -1s;
			}
			.event-card:nth-child(2) {
				animation-delay: -3s;
			}
			.event-card:nth-child(3) {
				animation-delay: -5s;
			}

			@keyframes eventCardFloat {
				0%,
				100% {
					transform: translateY(0) rotateY(0deg) rotateX(0deg);
				}
				25% {
					transform: translateY(-8px) rotateY(2deg) rotateX(1deg);
				}
				50% {
					transform: translateY(-5px) rotateY(-1deg) rotateX(-1deg);
				}
				75% {
					transform: translateY(-12px) rotateY(1deg) rotateX(2deg);
				}
			}

			.card-3d {
				perspective: 1000px;
			}

			.card-inner {
				background: rgba(26, 26, 46, 0.8);
				border-radius: 20px;
				overflow: hidden;
				border: 1px solid rgba(0, 240, 255, 0.2);
				backdrop-filter: blur(10px);
				transition: all 0.5s ease;
				transform-style: preserve-3d;
			}

			.event-card:hover {
				animation-play-state: paused;
				transform: translateY(-25px) rotateY(15deg) rotateX(10deg) scale(1.05);
			}

