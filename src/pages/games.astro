			.games-section {
				padding: var(--spacing-lg) 0;
			}

			.games-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
				gap: var(--spacing-md);
			}

			.game-card {
				position: relative;
				transform-style: preserve-3d;
				transition: all 0.5s ease;
				animation: fadeIn 0.6s ease-out forwards;
				opacity: 0;
			}

			@keyframes fadeIn {
				to {
					opacity: 1;
				}
			}

