			@keyframes title3DAnimation {
				0%,
				100% {
					transform: rotateY(0deg);
				}
				50% {
					transform: rotateY(5deg);
				}
			}

			.page-subtitle {
				font-size: 1.3rem;
				color: var(--gray);
				margin-bottom: 2rem;
			}

			.hero-badge {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				padding: 1rem 2rem;
				background: var(--gradient-gold);
				border-radius: 50px;
				font-weight: 700;
				color: var(--dark);
				animation: badgePulse 2s ease-in-out infinite;
