				.pricing-grid,
				.bundles-grid,
				.tournament-grid,
				.schedule-grid,
				.offers-grid,
				.faq-grid {
					grid-template-columns: 1fr;
				}

				.page-title {
					font-size: 3rem;
				}

				.tournament-icon-large {
					font-size: 4rem;
