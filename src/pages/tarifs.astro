			.card-price {
				text-align: center;
				margin-bottom: 0.5rem;
			}

			.price-amount {
				font-family: var(--font-primary);
				font-size: 4rem;
				font-weight: 900;
				background: var(--gradient-neon);
				-webkit-background-clip: text;
				background-clip: text;
				-webkit-text-fill-color: transparent;
			}

			.price-currency {
				font-size: 1.5rem;
				color: var(--gray);
				margin-left: 0.5rem;
			}

			.price-per {
				display: block;
				font-size: 0.9rem;
				color: var(--gray);
				margin-top: 0.5rem;
			}

			.card-subtitle {
				text-align: center;
				color: var(--gray);
				font-size: 1.1rem;
				margin-bottom: 2rem;
			}

			.card-features {
				list-style: none;
				margin-bottom: 2rem;
			}

			.card-features li {
				padding: 0.8rem 0;
				border-bottom: 1px solid rgba(0, 240, 255, 0.1);
				font-size: 1rem;
			}

			.card-features strong {
				color: var(--primary);
			}

			.btn-pricing {
				width: 100%;
				padding: 1.2rem;
				font-family: var(--font-primary);
				font-size: 1.1rem;
				font-weight: 700;
				background: transparent;
				border: 2px solid var(--primary);
				color: var(--primary);
				border-radius: 50px;
				cursor: pointer;
				transition: all 0.3s ease;
			}

			.btn-pricing:hover {
				background: var(--primary);
				color: var(--dark);
				transform: translateY(-3px);
				box-shadow: 0 10px 30px rgba(0, 240, 255, 0.5);
			}

			.btn-pricing.primary {
				background: var(--gradient-neon);
				color: var(--dark);
				border: none;
			}

			/* ============================================
			   BUNDLES SECTION
			   ============================================ */
			.bundles-section {
				padding: var(--spacing-lg) 0;
				background: rgba(26, 26, 46, 0.3);
			}

			.bundles-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: var(--spacing-md);
			}

			.bundle-card {
				background: rgba(26, 26, 46, 0.8);
				border-radius: 25px;
				padding: 2rem;
				border: 2px solid rgba(0, 240, 255, 0.2);
				position: relative;
				transition: all 0.3s ease;
			}

			.bundle-card:hover {
				transform: translateY(-10px);
				border-color: var(--primary);
				box-shadow: var(--shadow-lg);
			}

			.bundle-card.popular {
				border-color: var(--accent);
			}

			.bundle-card.vip {
				border-color: #ffd700;
				background: linear-gradient(135deg, rgba(255, 215, 0, 0.1), rgba(26, 26, 46, 0.8));
			}

			.bundle-ribbon {
				position: absolute;
				top: 20px;
				right: -5px;
				padding: 0.4rem 1rem;
				background: var(--accent);
				color: var(--dark);
				font-weight: 900;
				font-size: 0.75rem;
				box-shadow: 0 5px 15px rgba(255, 255, 0, 0.5);
