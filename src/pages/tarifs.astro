			.bundle-price {
				text-align: center;
				margin-bottom: 1rem;
				position: relative;
			}

			.original-price {
				font-size: 1.2rem;
				color: var(--gray);
				text-decoration: line-through;
				display: block;
			}

			.discounted-price {
				font-family: var(--font-primary);
				font-size: 2.5rem;
				font-weight: 900;
				color: var(--success);
