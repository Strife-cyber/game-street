				padding: var(--spacing-lg) 0;
			}

			.offers-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
				gap: var(--spacing-md);
			}

			.offer-card {
				background: rgba(26, 26, 46, 0.8);
				border-radius: 25px;
				padding: 2rem;
				border: 2px solid rgba(0, 240, 255, 0.2);
				position: relative;
				transition: all 0.3s ease;
			}

			.offer-card:hover {
				transform: translateY(-10px);
				border-color: var(--primary);
				box-shadow: var(--shadow-lg);
			}

			.offer-badge {
				position: absolute;
				top: 15px;
				right: 15px;
				padding: 0.4rem 1rem;
				background: var(--gradient-neon);
				border-radius: 20px;
				font-size: 0.8rem;
				font-weight: 700;
				color: var(--dark);
			}

			.offer-badge.hot {
				background: linear-gradient(135deg, #ff6b6b, #ff4757);
				animation: hotPulse 1.5s ease-in-out infinite;
			}

			@keyframes hotPulse {
				0%,
				100% {
					transform: scale(1);
				}
				50% {
					transform: scale(1.1);
				}
			}

			.offer-card h3 {
				font-family: var(--font-primary);
				font-size: 1.5rem;
				margin-bottom: 1rem;
				color: var(--primary);
			}

			.offer-desc {
				color: var(--gray);
				margin-bottom: 1rem;
				line-height: 1.6;
			}

			.offer-desc strong {
				color: var(--light);
			}

			.offer-example {
				padding: 1rem;
				background: rgba(0, 240, 255, 0.05);
				border-radius: 10px;
				border-left: 3px solid var(--primary);
				font-size: 0.95rem;
			}

			.offer-example s {
				color: var(--gray);
			}

			.offer-example strong {
				color: var(--success);
			}

			/* ============================================
			   FAQ SECTION
			   ============================================ */
			.faq-section {
				padding: var(--spacing-lg) 0;
				background: rgba(26, 26, 46, 0.3);
			}

			.faq-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
				gap: var(--spacing-md);
			}

			.faq-item {
				background: rgba(26, 26, 46, 0.8);
				border-radius: 20px;
				padding: 2rem;
				border: 2px solid rgba(0, 240, 255, 0.1);
				transition: all 0.3s ease;
			}

			.faq-item:hover {
				border-color: var(--primary);
				transform: translateY(-5px);
			}

			.faq-item h3 {
				font-family: var(--font-primary);
				font-size: 1.2rem;
				color: var(--primary);
				margin-bottom: 1rem;
			}

			.faq-item p {
				color: var(--gray);
				line-height: 1.6;
			}

			/* ============================================
			   CTA SECTION
			   ============================================ */
			.cta-section {
				padding: var(--spacing-lg) 0;
			}

			.cta-card {
				background: var(--gradient-gaming);
				border-radius: 30px;
				padding: var(--spacing-lg) var(--spacing-md);
				text-align: center;
				box-shadow: var(--shadow-lg);
			}

			.cta-card h2 {
				font-family: var(--font-primary);
				font-size: 3rem;
				color: var(--dark);
				margin-bottom: 1rem;
			}

			.cta-card p {
				font-size: 1.3rem;
				color: var(--dark);
				margin-bottom: 2rem;
				opacity: 0.9;
			}

			.cta-buttons {
				display: flex;
				gap: 1rem;
				justify-content: center;
				flex-wrap: wrap;
			}

			.btn-cta {
				padding: 1.2rem 3rem;
				font-family: var(--font-primary);
				font-size: 1.2rem;
				font-weight: 700;
				background: transparent;
				border: 3px solid var(--dark);
				color: var(--dark);
				border-radius: 50px;
				text-decoration: none;
				transition: all 0.3s ease;
			}

			.btn-cta:hover {
				transform: translateY(-5px);
				box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
			}

			.btn-cta.primary {
				background: var(--dark);
				color: var(--primary);
			}

			/* ============================================
			   FOOTER
			   ============================================ */
			.footer {
				background: var(--dark-2);
				padding: var(--spacing-md) 0;
				border-top: 1px solid rgba(0, 240, 255, 0.1);
			}

			.footer-bottom {
				text-align: center;
				color: var(--gray);
			}

