				right: 0;
				padding: 0.3rem 0.8rem;
				background: #ff0066;
				color: white;
				border-radius: 15px;
				font-size: 0.9rem;
				font-weight: 700;
			}

			.bundle-description {
				text-align: center;
				color: var(--gray);
				margin-bottom: 1.5rem;
			}

			.bundle-features {
				list-style: none;
			}

			.bundle-features li {
				padding: 0.8rem 0;
				border-bottom: 1px solid rgba(0, 240, 255, 0.1);
			}

			/* ============================================
			   TOURNAMENT SECTION
			   ============================================ */
			.tournament-section {
				padding: var(--spacing-lg) 0;
				background: linear-gradient(135deg, rgba(255, 215, 0, 0.05), rgba(26, 26, 46, 0.5));
			}

			.tournament-hero {
				text-align: center;
				margin-bottom: var(--spacing-lg);
			}

			.tournament-icon-large {
				font-size: 6rem;
				margin-bottom: 1rem;
				animation: float 3s ease-in-out infinite;
			}

			@keyframes float {
				0%,
				100% {
					transform: translateY(0);
				}
				50% {
					transform: translateY(-20px);
				}
			}

			.tournament-title {
				font-family: var(--font-primary);
				font-size: clamp(2.5rem, 6vw, 5rem);
				font-weight: 900;
				background: var(--gradient-gold);
				-webkit-background-clip: text;
				background-clip: text;
				-webkit-text-fill-color: transparent;
				margin-bottom: 1rem;
			}

			.tournament-subtitle {
				font-size: 1.3rem;
				color: var(--gray);
			}

			.tournament-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
				gap: var(--spacing-md);
				margin-bottom: var(--spacing-lg);
			}

			.tournament-card {
				background: rgba(26, 26, 46, 0.9);
				border-radius: 30px;
				padding: 2.5rem;
				border: 3px solid #ffd700;
				box-shadow: 0 0 40px rgba(255, 215, 0, 0.3);
			}

			.tournament-header {
				text-align: center;
				margin-bottom: 2rem;
			}

			.tournament-header h3 {
				font-family: var(--font-primary);
				font-size: 2rem;
				margin-bottom: 1.5rem;
			}

			.tournament-price {
				display: flex;
				align-items: baseline;
				justify-content: center;
				gap: 0.5rem;
			}

			.price-large {
				font-family: var(--font-primary);
				font-size: 5rem;
				font-weight: 900;
				background: var(--gradient-gold);
				-webkit-background-clip: text;
				background-clip: text;
				-webkit-text-fill-color: transparent;
			}

			.price-currency-large {
				font-size: 2rem;
				color: var(--gray);
			}

			.tournament-details {
				margin-bottom: 2rem;
			}

			.detail-item {
				display: flex;
				gap: 1rem;
				padding: 1rem;
				background: rgba(0, 240, 255, 0.05);
				border-radius: 15px;
				margin-bottom: 1rem;
			}

			.detail-icon {
				font-size: 2rem;
			}

			.detail-item strong {
				display: block;
				color: var(--primary);
				margin-bottom: 0.3rem;
			}

			.detail-item p {
				color: var(--gray);
				font-size: 0.95rem;
			}

			.btn-tournament {
				width: 100%;
				padding: 1.5rem;
				font-family: var(--font-primary);
				font-size: 1.3rem;
				font-weight: 900;
				background: var(--gradient-gold);
				color: var(--dark);
				border: none;
				border-radius: 50px;
				cursor: pointer;
				transition: all 0.3s ease;
				box-shadow: 0 10px 30px rgba(255, 215, 0, 0.3);
			}

			.btn-tournament:hover {
				transform: translateY(-5px) scale(1.02);
				box-shadow: 0 20px 60px rgba(255, 215, 0, 0.5);
			}

			/* Prize Card */
			.prize-card {
				background: linear-gradient(135deg, rgba(255, 215, 0, 0.1), rgba(26, 26, 46, 0.9));
				border-radius: 30px;
				padding: 2.5rem;
				border: 3px solid #ffd700;
			}

			.prize-header {
				text-align: center;
				margin-bottom: 2rem;
			}

			.prize-header h3 {
				font-family: var(--font-primary);
				font-size: 2rem;
				margin-bottom: 1rem;
			}

			.total-prize {
				font-family: var(--font-primary);
				font-size: 3rem;
				font-weight: 900;
				color: #ffd700;
			}

			.prize-list {
				display: flex;
				flex-direction: column;
				gap: 1rem;
			}

			.prize-item {
				background: rgba(0, 0, 0, 0.3);
				border-radius: 20px;
				padding: 1.5rem;
				border: 2px solid rgba(255, 255, 255, 0.1);
			}

			.prize-item.first {
				border-color: #ffd700;
				background: rgba(255, 215, 0, 0.1);
			}

			.prize-item.second {
				border-color: #c0c0c0;
			}

			.prize-item.third {
				border-color: #cd7f32;
			}

			.prize-rank {
				display: flex;
				align-items: center;
				gap: 1rem;
				margin-bottom: 1rem;
			}

			.medal {
				font-size: 2.5rem;
			}

			.rank-text {
				font-family: var(--font-primary);
				font-size: 1.3rem;
				font-weight: 700;
			}

			.prize-amount {
				display: flex;
				align-items: baseline;
				gap: 0.5rem;
				margin-bottom: 0.5rem;
			}

			.prize-amount .amount {
				font-family: var(--font-primary);
				font-size: 2.5rem;
				font-weight: 900;
				color: #ffd700;
			}

			.prize-amount .currency {
				font-size: 1.2rem;
				color: var(--gray);
			}

			.prize-extra {
				color: var(--gray);
				font-style: italic;
			}

			/* Tournament Schedule */
			.tournament-schedule {
				background: rgba(26, 26, 46, 0.8);
				border-radius: 25px;
				padding: 2.5rem;
				border: 2px solid rgba(0, 240, 255, 0.2);
			}

			.tournament-schedule h3 {
				font-family: var(--font-primary);
				font-size: 2rem;
				text-align: center;
				margin-bottom: 2rem;
			}

			.schedule-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
				gap: 1rem;
			}

			.schedule-item {
				background: rgba(0, 240, 255, 0.05);
				border-radius: 15px;
				padding: 1.5rem;
				text-align: center;
				border: 1px solid rgba(0, 240, 255, 0.2);
				transition: all 0.3s ease;
			}

			.schedule-item:hover {
				transform: translateY(-5px);
				border-color: var(--primary);
				box-shadow: 0 10px 30px rgba(0, 240, 255, 0.2);
			}

			.schedule-item .day {
				font-family: var(--font-primary);
				font-size: 1.2rem;
				color: var(--primary);
				margin-bottom: 0.5rem;
			}

			.schedule-item .game {
				font-size: 1.1rem;
				font-weight: 700;
				margin-bottom: 0.5rem;
			}

			.schedule-item .time {
				color: var(--gray);
				font-size: 0.95rem;
			}

			/* ============================================
			   OFFERS SECTION
			   ============================================ */
